<div class="container container--narrow">
  <%= bootstrap_devise_error_messages! %>
  <div class="form">

    <h2 class="title">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <span><%= link_to "Forgot?", new_password_path(resource_name) %></span>
        <% end -%>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div>
        <% end %>
      <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-action" %>
    <% end %>

    <%= render "devise/shared/links" %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <p class="form--footer">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
    <% end -%>

  </div>
</div>
