<div class="container container--narrow">
  <%= bootstrap_devise_error_messages! %>
  <div class="form">

    <h2 class="title">
      <span class="">Sign In</span>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <span class="title--sub">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></span>
      <% end -%>
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <span><%= link_to "Forgot?", new_password_path(resource_name) %></span>
        <% end -%>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-action" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
