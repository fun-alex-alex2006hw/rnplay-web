<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <span><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></span>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <span><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></span>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="omniauth">
      <%= link_to image_tag("Octocat.png", width: '40')+" Sign in with Github", omniauth_authorize_path(resource_name, provider), { :class => "btn btn-login" } %>
    </div>
  <% end -%>
<% end -%>
